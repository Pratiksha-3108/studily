 <script>
/* ================================
   NAVBAR SCROLL BEHAVIOR
================================ */
const header = document.getElementById('siteHeader');

function handleNavScroll() {
  if (window.scrollY > 40) {
    header.classList.add('nav-solid');   // add glass background on scroll
  } else {
    header.classList.remove('nav-solid');
  }
}

window.addEventListener('scroll', handleNavScroll);
handleNavScroll(); // run on load



/* ================================
   HORIZONTAL CAROUSEL LOGIC
================================ */
const carousel = document.getElementById('carousel');
const leftBtn = document.getElementById('carLeft');
const rightBtn = document.getElementById('carRight');
const dotsContainer = document.getElementById('dots');


/* Build dots dynamically */
function buildDots() {
  if (!carousel || !dotsContainer) return;

  dotsContainer.innerHTML = '';
  const cards = carousel.querySelectorAll('.snap-start');

  cards.forEach((card, index) => {
    const dot = document.createElement('button');
    dot.className = 'w-3 h-3 rounded-full bg-white/30';

    dot.addEventListener('click', () => {
      card.scrollIntoView({ behavior: 'smooth', block: 'nearest', inline: 'center' });
      updateActiveDot();
    });

    dotsContainer.appendChild(dot);
  });

  updateActiveDot();
}


/* Update active dot based on card center */
function updateActiveDot() {
  if (!carousel || !dotsContainer) return;

  const dots = dotsContainer.children;
  const cards = [...carousel.querySelectorAll('.snap-start')];

  if (!dots.length || !cards.length) return;

  let activeIndex = 0;
  let minDiff = Infinity;

  cards.forEach((card, idx) => {
    const cardCenter = card.offsetLeft + card.offsetWidth / 2;
    const viewCenter = carousel.scrollLeft + carousel.clientWidth / 2;
    const diff = Math.abs(cardCenter - viewCenter);

    if (diff < minDiff) {
      minDiff = diff;
      activeIndex = idx;
    }
  });

  for (let i = 0; i < dots.length; i++) {
    dots[i].className =
      'w-3 h-3 rounded-full ' + (i === activeIndex ? 'dot-active' : 'bg-white/30');
  }
}


/* Arrow Buttons */
leftBtn?.addEventListener('click', () => {
  carousel.scrollBy({ left: -300, behavior: 'smooth' });
});

rightBtn?.addEventListener('click', () => {
  carousel.scrollBy({ left: 300, behavior: 'smooth' });
});


/* Update dots on scroll */
carousel?.addEventListener('scroll', updateActiveDot);


/* Build initial dots */
buildDots();


/* Show/hide arrows on mobile */
function toggleArrows() {
  if (!leftBtn || !rightBtn) return;

  if (window.innerWidth >= 768) {
    leftBtn.classList.remove('hidden');
    rightBtn.classList.remove('hidden');
  } else {
    leftBtn.classList.add('hidden');
    rightBtn.classList.add('hidden');
  }
}

toggleArrows();


/* Recalculate on window resize */
window.addEventListener('resize', () => {
  toggleArrows();
  buildDots();   // rebuild dots for correct card count/dimensions
});



/* ================================
   SOCIAL BAR SHOW/HIDE ON SCROLL
================================ */
const social = document.querySelector('.social-stick');
const firstSection = document.getElementById('heroSection');  // must exist

window.addEventListener('scroll', () => {
  const bottom = firstSection.offsetTop + firstSection.offsetHeight;

  if (window.scrollY > bottom - 200) {
    social.classList.add('social-hidden');   // hide stickbar
  } else {
    social.classList.remove('social-hidden'); // show stickbar
  }
});
// Select all sections, images, and elements with class .animate-up
const revealElements = document.querySelectorAll('section, img, .animate-up');

function revealOnScroll() {
  const windowHeight = window.innerHeight;

  revealElements.forEach(el => {
    const elementTop = el.getBoundingClientRect().top;
    const elementBottom = el.getBoundingClientRect().bottom;

    if (elementTop < windowHeight * 0.85 && elementBottom > 0) {
      el.classList.add('visible');   // add animation
    } else {
      el.classList.remove('visible'); // remove to repeat effect
    }
  });
}

// Trigger on scroll and on page load
window.addEventListener('scroll', revealOnScroll);
revealOnScroll();

</script>
</body>
</html>
