<!-- SCRIPT -->
<script>
function toggleVideos() {
  const extraVideos = document.querySelectorAll(".extraVideo");
  const btn = document.getElementById("toggleBtn");
  const section = document.getElementById("videos");

  const hidden = extraVideos[0].classList.contains("hidden");

  if (hidden) {
    extraVideos.forEach(v => v.classList.remove("hidden"));
    btn.innerText = "View Less";
  } else {
    extraVideos.forEach(v => v.classList.add("hidden"));
    btn.innerText = "View More";

    setTimeout(() => {
      const pos = section.offsetTop - 120;
      window.scrollTo({ top: pos, behavior: "smooth" });
    }, 50);
  }
}
</script>

