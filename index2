<script>
  (function () {
    const strip = document.getElementById("testStrip");
    const total = strip.children.length;
    let index = 0;

    const prev = document.getElementById("prevTest");
    const next = document.getElementById("nextTest");

    function move(i) {
      index = (i + total) % total;
      strip.style.transform = `translateX(${-index * 100}%)`;
    }

    prev.onclick = () => move(index - 1);
    next.onclick = () => move(index + 1);

    let auto = setInterval(() => move(index + 1), 7000);

    [prev, next].forEach(btn => {
      btn.onmouseenter = () => clearInterval(auto);
      btn.onmouseleave = () => (auto = setInterval(() => move(index + 1), 7000));
    });

    move(0);
  })();
</script>
